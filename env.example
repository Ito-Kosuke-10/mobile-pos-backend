# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///./pos_app.db
# For production: mysql+pymysql://username:password@server.mysql.database.azure.com:3306/database_name

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://mobile-pos-frontend.azurewebsites.net

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=info

# Azure Configuration (for production)
AZURE_RESOURCE_GROUP=rg-mobile-pos
AZURE_LOCATION=japaneast
ACR_LOGIN_SERVER=your-registry.azurecr.io
